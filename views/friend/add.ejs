<%- include('../partials/header.ejs') %>

<!-- HTMX -->
<script src="https://unpkg.com/htmx.org@1.9.11"></script>

<title>Sweat Rivals | Friends</title>      

<main class="container text-white pb-5">

    <div class="w-100 mx-auto text-center">
        <h2>Sweat Rivals Add Friend Page</h2>
    </div>

    <div class="input-group my-4">
        <span class="input-group-text fs-4" id="search-field-text">Username:</span>
        <input type="text" class="form-control" id="search-field-input" aria-describedby="search-field-text">
        <button class="btn btn-success fs-4" type="button">Search</button>        
    </div>

    <div class="container" id="search-results">
        <table class="table table-dark">
            <thead>
                <tr class="text-center">
                    <th scope="col">Username</th>
                    <th scope="col">Status</th>
                    <th scope="col"></th>
                    <th scope="col">View/Add Friend</th>
                </tr>
            </thead>
            <tbody>
                <% prospects.map(prospect => { %> 
                    <tr class="text-center fs-4">
                        <th scope="row"><%= prospect.username %></th>
                        <td>Not Friends</td>
                        <td>Maybe add user points here?</td>
                        <td>
                            <form>
                                <button formmethod="POST" formaction="/friends/add/<%= prospect._id %>" class="btn btn-success">Send Request</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</main>

<%- include('../partials/footer.ejs') %>

